{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022"],
    "outDir": "dist",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": "src",
    "paths": {
      "src/*": ["*"],
      "tests/*": ["../tests/*"]
    }
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"]
}
